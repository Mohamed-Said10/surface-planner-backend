generator client {
  provider = "prisma-client-js"
   output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  password        String    
  firstname       String
  lastname        String
  role            Role
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  verificationToken String?
  bookings        Booking[] @relation("ClientBookings")      // Bookings created by this user
  assignedBookings Booking[] @relation("PhotographerBookings") // Bookings assigned to this user (if photographer)
  payments        Payment[] // Payments made by this user
  bookingStatusHistories BookingStatusHistory[] // Status changes made by this user
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

enum Role {
  CLIENT
  PHOTOGRAPHER
  ADMIN
}

model Package {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  features    String[] // Stored as JSON array
  pricePerExtra Float?
  bookings    Booking[]
}

model Booking {
  id               String          @id @default(uuid())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  
  // Client who created the booking
  clientId         String
  client           User            @relation("ClientBookings", fields: [clientId], references: [id])
  
  // Photographer assigned to this booking (optional)
  photographerId   String?
  photographer     User?           @relation("PhotographerBookings", fields: [photographerId], references: [id])
  
  // Booking details
  status           BookingStatus   @default(BOOKING_CREATED)
  
  // BookingStatusHistory relation
  statusHistories  BookingStatusHistory[]
  
  // Package details
  packageId        Int
  package          Package         @relation(fields: [packageId], references: [id])
  
  // Property details
  propertyType     String
  propertySize     String
  buildingName     String
  unitNumber       String
  floor            String
  street           String
  
  // Selected date and time
  appointmentDate  DateTime
  timeSlot         String
  
  // Client contact details
  firstName        String
  lastName         String
  phoneNumber      String
  email            String
  
  // Add-ons
  addOns           AddOn[]
  
  additionalDirections String?
  additionalRequests String?

  // Payment status
  isPaid           Boolean         @default(false)
  
  // Payment relation
  payments         Payment[]
}

// New model to track booking status history
model BookingStatusHistory {
  id              String          @id @default(uuid())
  
  // Booking this status change is associated with
  bookingId       String
  booking         Booking         @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  // User who changed the status
  userId          String
  user            User            @relation(fields: [userId], references: [id])
  
  // Status details
  status          BookingStatus   
  notes           String?         // Optional notes about the status change
  
  // Timestamps
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model AddOn {
  id              String   @id @default(uuid())
  bookingId       String
  booking         Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  addonId         String
  name            String
  price           Float
}

model Payment {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  
  // User who made the payment
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Related booking
  bookingId       String
  booking         Booking  @relation(fields: [bookingId], references: [id])
  
  // Payment details
  amount          Float
  paymentMethod   String?
  transactionId   String?
  status          PaymentStatus @default(PENDING)
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum BookingStatus {
  BOOKING_CREATED
  PHOTOGRAPHER_ASSIGNED
  SHOOTING
  EDITING
  COMPLETED
}